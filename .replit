modules = ["nodejs-20", "python-3.11", "web"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "jq"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35673
externalPort = 3000

[[ports]]
localPort = 40271
externalPort = 3002

[[ports]]
localPort = 40655
externalPort = 3001

[[ports]]
localPort = 44409
externalPort = 4200

[[ports]]
localPort = 45271
externalPort = 3003

[env]
PORT = "5000"

[agent]
integrations = ["javascript_auth_all_persistance:1.0.0", "javascript_mem_db:1.0.0"]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
